@model ProjetAsp.Models.Article
@{
    Layout = "~/Views/Shared/_nob.cshtml";
}

@{
    ViewBag.Title = ProjetAsp.Resources.HomeTexts.EditArt;
}

<h2>@ProjetAsp.Resources.HomeTexts.EditArt</h2>

